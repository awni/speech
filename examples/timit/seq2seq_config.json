{
    "seed" : 2017,
    "save_path" : "examples/timit/models/seq2seq_ali_save",

    "data" : {
        "train_set" : "examples/timit/data/timit/train.json",
        "dev_set" : "examples/timit/data/timit/dev.json",
        "start_and_end" : true
    },

    "optimizer" : {
        "batch_size" : 8,
        "epochs" : 200,
        "learning_rate" : 1e-3,
        "momentum" : 0.0
    },

    "model" : {
        "class" : "Seq2Seq",
        "dropout" : 0.2,
        "encoder" : {
            "conv" : [
                [8, 5, 32, 2],
                [8, 5, 32, 1]
            ],
            "rnn" : {
                "dim" : 256,
                "bidirectional" : true,
                "layers" : 4
            }
        },
        "decoder" : {
            "sample_prob" : 0.4,
            "embedding_dim" : 256,
            "log_t" : true,
            "layers" : 1
        }
    }
}
